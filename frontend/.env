VITE_API_BASE=http://localhost:3000
# .env

# Server
PORT=3000
FRONTEND_ORIGIN=http://localhost:5173   # or "*" if testing

# Database (example: Neon, Supabase, or local Postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/qrdb

# Storage (choose one)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name
# S3_PUBLIC_BASE=https://cdn.example.com  # optional CDN override

# If you want Firebase instead of S3
# STORAGE_PROVIDER=firebase
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# OpenAI (optional)
# OPENAI_API_KEY=sk-...
# AI_MODEL=gpt-4o-mini
